doctype html
html(lang="pt-br")
    include ./includes/head.jade
        block stylesheets
            | {% if page.css %}
            |   {% for stylesheet in page.css %}
            link(rel="stylesheet" href="{{ 'assets/css/stylesheet.min.css' | replace: 'stylesheet', stylesheet | prepend: site.baseurl }}")
            |   {% endfor %}
            | {% endif %}
    body
        include ./includes/menu.jade
        include ./includes/header.jade

        | {{ content }}

        include ./includes/footer.jade
            block scripts
                script(src="{{ 'assets/js/main.min.js' | prepend: site.baseurl }}")
                | {% if page.js %}
                |   {% for script in page.js %}
                script(src="{{ 'assets/js/script.js' | replace: 'script', script | prepend: site.baseurl }}")
                |   {% endfor %}
                | {% endif %}