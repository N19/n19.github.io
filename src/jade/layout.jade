doctype html
html(lang="pt-br")
	include _head.jade
		block stylesheets
			link(rel="stylesheet" href="{{ '/assets/css/main.css' | prepend: site.baseurl }}")

			| {% if page.css %}
			|	{% for stylesheet in page.css %}
			link(rel="stylesheet" href="{{ '/assets/css/stylesheet.css' | replace: 'stylesheet', stylesheet | prepend: site.baseurl }}")
			|	{% endfor %}
			| {% endif %}

	body
		include _menu.jade
		include _header.jade

		| {{ content }}

		include _footer.jade
			block scripts
				script(src="{{ '/assets/js/main.min.js' | prepend: site.baseurl }}")

				| {% if page.js %}
				|	{% for script in page.js %}
				script(src="{{ '/assets/js/script.js' | replace: 'script', script | prepend: site.baseurl }}")
				|	{% endfor %}
				| {% endif %}