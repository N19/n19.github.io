*, *:before, *:after
	-moz-box-sizing border-box
	box-sizing border-box
	
html, body
	font-family $baseFont
	font-size 10px
	
html, body, ul, h1, h2
	margin 0
	padding 0
	
h1
	font-size 2rem

h2
	font-size 1.5rem
	
a, a:link, a:visited
	color $primaryColor
	
a:active
	color darken($primaryColor, 40%)