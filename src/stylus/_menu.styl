#main-menu
	position fixed
	width 100%
	height 4.5rem
	top 0
	background-color $baseColor
	z-index 1
	
	& label
		position relative
		display inline-block
		width 4.5rem
		height 4rem
		padding 0.75rem
		cursor pointer

		& .menu-button
			&, &:before, &:after
				position absolute
				width 3rem
				height .5rem
				background-color #fff
				transition all 300ms
				
			&:before, &:after
				content ''
				position relative
				display block
				top 1rem
			
			&:after
				top 1.5rem
				

	& input[type=checkbox]
		display none

		&:checked
			& ~ label .menu-button
				margin-top 1rem
				transform rotateZ(45deg)
				
				&:before
					opacity 0

				&:after
					margin-top -2rem
					transform rotateZ(-90deg)
				
			& ~ label ~ .content
				max-height 25rem
				
	& .content
		max-height 0
		overflow hidden
		box-shadow 0 1rem 2rem rgba(0, 0, 0, .3)
		transition all 300ms ease
		
		& ul
			list-style none
			
		& li
			background-color lighten($baseColor, 10%)
			border-bottom 1px solid lighten($baseColor, 2%)
			font-size 0

		& a
			&, &:link, &:visited
				display block
				padding .75rem
				font-size 1.6rem
				color #fff
				text-decoration none
			
			&:hover
				text-decoration underline
				
			&:active
				color $primaryColor
			