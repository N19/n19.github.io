*, *:before, *:after
    -moz-box-sizing border-box
    box-sizing border-box
    
html, body
    font-family $baseFont
    font-size 10px
    
html, body, ul, h1, h2, h3, h4, h5, h6, footer, p
    margin 0
    padding 0
    
a
    &, &:link, &:visited
        color $primaryColor
        
    &:active
        color darken($primaryColor, 30%)    