#header
	height 20rem
	background-image url("../img/header-bg.jpg")
	background-size cover
	background-position 50% 50%
	
	& .container
		width 100%
		height 100%
		background-color rgba(0, 0, 0, .5)

	& .blog-title
		position relative
		top 50%
		font-family $titleFont
		font-size 3rem
		color #fff
		text-shadow 0 0 .5rem #000
		text-align center
		
		& #title-span
			color $secondaryColor